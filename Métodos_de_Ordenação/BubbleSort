/*
Ordenar um pequeno vetor (6, 3, 8, 1, 9) em ordem 
crescente usando o algoritmo Bubble Sort.
*/

#include<stdio.h>
#include<stdlib.h>

void imprimir(int * array, int tam){
    
    for(int i = 0; i < tam; i++){
        printf("%d\t", array[i]);
    }
    
}

void BubbleSort(int * array, int tam){
    int med;
    
    for(int i = 0; i < tam; i++){
        for(int j = 0; j < tam - 1; j++){
            if(array[j] > array[j + 1]){
                med = array[j];
                array[j] = array[j + 1];
                array[j + 1] = med;
            }
        }
    }
}

int main(){
    int vetor[] = {6, 3, 8, 1, 9};
    int tamanho = 5;
    
    printf("Vetor original: ");
    
    imprimir(vetor, tamanho);
    
    BubbleSort(vetor, tamanho);
    
    printf("\nVetor ordenado: ");
    
    imprimir(vetor, tamanho);
    
    return 0;
}
